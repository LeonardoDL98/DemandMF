
@{
    ViewBag.Title = "Graphics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        @foreach (var item in DemandMetalFab.GlobalCode.Settings.db.MF_Proceso)
        {
            <div id="gra_@item.Id_Proceso" class="col-md-6"></div>
        }
    </div>
</div>

<script type="text/javascript">
 var datas = JSON.parse('@(Html.Raw(ViewBag.ids))');
    $(document).ready(function () {
        for (var q = 0; q < datas.length; q++) {
            $("#gra_" + datas[q]).empty();
            $('#gra_' + datas[q]).html('<img src="@Url.Content("~/Imagenes/Cargador/loader4.gif")" />');
            $('#gra_' + datas[q]).load("@Url.Action("GraficaIndividual", "Home")?id=" + datas[q]);
        }
    });
 </script>
