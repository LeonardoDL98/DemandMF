@model IEnumerable<DemandMetalFab.Models.MF_Part>

@{
    ViewBag.Title = "Index";
     Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table dt">
    <thead>
        <tr>
