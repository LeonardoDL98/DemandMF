                @Html.DisplayFor(modelItem => item.Num_Part)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MF_Machine.Machine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MF_Project.Project)
            </td>
