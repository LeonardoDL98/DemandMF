        function logout() {
            $.ajax({
                url: '@Url.Action("logout", "Login")',
                data: {},
                    type: 'POST',
                    success: function (response) {
                        bootoast.toast({
                             message: response.Message,
                             type: 'danger',
                             position: 'bottom-center',
                             timeout: null,
                             animationDuration: 300
                            });
                        window.setTimeout(function () {

                                window.location.href = '@Url.Action("Graficas","DemandDates")';
                            }, 3000)
                    },
                    error: function () {
                        alert('Error');
                    }
                });
        }

        function Updatepage() {
            var valor = $("#Id_Proceso").val();
            @*var link = '@Url.Action("Graficas", "DemandDates", new { process = "-1" })';
            link = link.replace("-1", valor);
            window.location.href = link;*@

            $.ajax({
                    url: '@Url.Action("AsignacionDatos", "Home")',
                    data: {proceso:valor},
                    type: 'POST',
                    success: function (response) {
                        window.location.href = '@Url.Action("Graficas","DemandDates")';
                    },
                    error: function () {
                        alert('Error');
                    }
                });
        }

        function fnLoader() {
            $.blockUI({
                message: '<h1><img src="' + '@Url.Content("~/Imagenes/Cargador/loader4.gif")' + '" /></h1>',
                baseZ: 2147483647,
                css: {
                    padding: 0,
                    margin: 0,
                    top: ($(window).height() - 400) / 2 + 'px',
                    left: ($(window).width() - 400) / 2 + 'px',
                    textAlign: 'center',
                    border: 'none',
                    backgroundColor: 'transparent',
                    cursor: 'wait'
                },
            });

        }


// jquery ready start
$(document).ready(function() {
	// jQuery code

	// show code script

		$('.code').each(function() {
		  var that = $(this);
		  // cache the content of 'code'
		  var html = that.html().trim();
		  that.empty();
		  // escape the content
		  that.text(html);
		});


	$('.showcode').click(function(e){
		e.preventDefault();

		var mydata = $(this).attr('data-html');
		var myhtml = $('#'+mydata).html();
		$('#loadhere').text(myhtml);
		Prism.highlightAll();

		$('#mymodal').modal('show');

	});


